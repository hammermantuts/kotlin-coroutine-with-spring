<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%d{HH:mm:ss.SSS} %red[%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg%n</pattern>-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%-10mdc{traceId}] [%20.20thread] %50.50logger{50}: %message%n%ex{full}</pattern>
        </encoder>
    </appender>

<!--    <logger name="reactor.netty.http.server.HttpServerOperations" level="TRACE" />-->

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>